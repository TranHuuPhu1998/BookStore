@model System.Collections.Generic.List<BookStore.Models.Book>
<div>
    @foreach(
        Book book in Model
    ){ <div class="single-cart-block ">
        <div class="cart-product">
            <a href="product-details.html" class="image">
                <img src="~/image/products/cart-product-1.jpg" alt="">
            </a>
            <div class="content">
                <h3 class="title">
                    <a href="product-details.html">
                        @book.Title
                    </a>
                </h3>
                <p class="price"><span class="qty"></span> $@book.Price</p>
                <button class="cross-btn"><i class="fas fa-times">
                        <a href="@Url.Action(" RemoveProduct", new {book.Id})"></a>
                    </i></button>
            </div>
        </div>
    </div>
    }
</div>
